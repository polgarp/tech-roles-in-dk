<?xml version="1.0" encoding="UTF-8"?>
<Annotations>
  <!--
    HOW TO ADD A NEW SITE:
    1. Copy an <Annotation> block below
    2. Change the "about" URL pattern (domain/path/*)
    3. Update "display_name" to the company name
    4. Update "href" to the direct careers page link
    5. Save this file and push to GitHub
    6. Upload to Google PSE: Setup → Sites to search → Advanced → Add annotations file
       (Google will ignore the AdditionalData elements and just use the Label)
  -->

  <Annotation about="careers.unity.com/*">
    <Label name="_include_"/>
    <AdditionalData attribute="display_name" value="Unity"/>
    <AdditionalData attribute="href" value="https://careers.unity.com/"/>
  </Annotation>

